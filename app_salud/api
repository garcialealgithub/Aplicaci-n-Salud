# Creamos el desplegable
enunciado = tkinter.Label(text='Selecciona músculo a entrenar:') # dentro de (), 1º valor (desplegable)
enunciado.grid(row=0, column=0)
seleccion = ttk.Combobox(values=musculos, state='readonly') # dentro de (), 1º valor (desplegable)
seleccion.grid(row=1, column=0)
